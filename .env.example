# Required
SHP_ID_APP=your-azure-app-client-id
SHP_ID_APP_SECRET=your-azure-app-secret
SHP_TENANT_ID=your-azure-tenant-id
SHP_SITE_URL=https://your-tenant.sharepoint.com/sites/your-site

# SharePoint library path (optional)
SHP_DOC_LIBRARY=Shared Documents/mcp_server

# Tree operation limits (optional)
SHP_MAX_DEPTH=15
SHP_MAX_FOLDERS_PER_LEVEL=100
SHP_LEVEL_DELAY=0.5

# Transport: stdio (default, Claude Desktop) or http (Docker, remote)
TRANSPORT=stdio
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console   # console (dev) | json (production/Docker)
