{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
    "name": "io.github.ravikant1918/sharepoint-mcp",
    "title": "SharePoint MCP Server",
    "description": "MCP server for Microsoft SharePoint â€” manage folders, documents, and metadata.",
    "version": "1.0.0",
    "websiteUrl": "https://github.com/ravikant1918/sharepoint-mcp",
    "repository": {
        "url": "https://github.com/ravikant1918/sharepoint-mcp",
        "source": "github"
    },
    "packages": [
        {
            "registryType": "pypi",
            "identifier": "sharepoint-mcp",
            "version": "1.0.0",
            "runtimeHint": "uvx",
            "transport": {
                "type": "stdio"
            },
            "environmentVariables": [
                {
                    "name": "SHP_ID_APP",
                    "description": "Azure AD application (client) ID",
                    "isRequired": true,
                    "isSecret": false
                },
                {
                    "name": "SHP_ID_APP_SECRET",
                    "description": "Azure AD client secret",
                    "isRequired": true,
                    "isSecret": true
                },
                {
                    "name": "SHP_TENANT_ID",
                    "description": "Microsoft Entra (Azure AD) tenant ID",
                    "isRequired": true,
                    "isSecret": false
                },
                {
                    "name": "SHP_SITE_URL",
                    "description": "SharePoint site URL (e.g. https://tenant.sharepoint.com/sites/MySite)",
                    "isRequired": true,
                    "isSecret": false
                },
                {
                    "name": "SHP_DOC_LIBRARY",
                    "description": "SharePoint document library path",
                    "isRequired": false,
                    "isSecret": false,
                    "default": "Shared Documents/mcp_server"
                }
            ]
        }
    ]
}